
<%= form_for(@employee) do |f| %>

    <div class="form-row">
        <div class="form-group mb-6">
        <%= f.label :name, class: "form-label"%>
        <%= f.text_field :name, class: "form-control" %>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group mb-6">
        <%= f.label :email, class: "form-label" %>
        <%= f.text_field :email, class: "form-control"  %>
        </div>
    </div>

    <div class="form-row text-left">
        <div class="form-group mb-6">
        <%= f.label :posicion, class: "form-label" %>
        <%= f.text_field :posicion, class: "form-control"  %>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group mb-6">
        <%= f.label :num_empleado, class: "form-label" %>
        <%= f.text_field :num_empleado, class: "form-control"  %>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group mb-6">
        <%= f.label :private_num, class: "form-label" %>
        <%= f.text_field :private_num, class: "form-control"  %>
        </div>
    </div>

    <div class="buttonSubmit">
        <%= f.submit "Guardar", class:"btn btn-primary" %>
    </div>
<% end %>